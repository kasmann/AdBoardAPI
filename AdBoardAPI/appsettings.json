{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppConfiguration": {
    "PublishOptions": {
      "MaxAdsByUser": 15
    },
    "SystemOptions": {
      "StaticFilesRoot": "/images"
    },
    "CacheOptions": {
      "CacheRoot": "\\images\\cache",
      //объем в мегабайтах
      "MaxCacheSize": 1024,
      "MaxFilesCached": 1000
    }
  },
  "ConnectionStrings": {
    "AdBoardContext": "Data Source=(LocalDB)\\MSSQLLocalDB;AttachDbFilename=D:\\DB\\adBoardDB.mdf;Integrated Security=True"
  }
}
